<div class="container">
  <div class="row">
    <div class="col-md-3">
      <h2>User Info</h2>
       <%= image_tag @user.get_profile_image(100,100) %>

       <table>
        <tbody>
          <tr></tr>
          <tr>
            <th>name</th>
            <th><%= @user.name %></th>
          </tr>
          <tr>
            <th>introduction</th>
            <th></th>
          </tr>
        </tbody>
       </table>

      <div class="row">
        <%= link_to edit_user_path(@user), class: "btn btn-outline-secondary btn-block edit_user_a195315", method: :get do %>
          <i class="fa-solid fa-user-gear"></i>
        <% end %>
      </div>

      <h2 class="mt-3">New Book</h2>
      <%= form_with model: @book do |f| %>
        <div class="form-group">
          <label for="book_title">Title</label>
          <%= f.text_field :title, class: "form-control book_title" %>
        </div>
        <div class="form-group">
          <label for="book_opinion">Opinion</label>
          <%= f.text_area :body, class: "form-control book_body", rows: "3" %>
        </div>
        <div class="form-group">
          <%= f.submit 'Create Book', class: "btn btn-success" %>
        </div>
      <% end %>
    </div>
  <%# テンプレート化 %>



  <div class="col-md-8 offset-md-1">
    <h2>Book detail</h2>
    <table class="table">
      <tbody>
        <tr>
          <td>
            <%= link_to user_path(@show_book.user_id) do %>
                <%= image_tag @show_book.user.get_profile_image(100,100) %>
                <br>
                <%= @show_book.user.name %>
            <% end %>
          </td>
          <td>
            <%= link_to book_path(@show_book.id) do %>
              <%= @show_book.title %>
            <% end %>
          </td>
          <td>
            <%= @show_book.body %>
          </td>
          <% if @show_book.user == current_user %>
            <td>
              <%= link_to "Edit", edit_book_path(@show_book.id), class: "btn btn-sm btn-success", method: :get %>
            </td>
            <td>
              <%= link_to "Destroy", book_path(@show_book.id), class: "btn btn-sm btn-danger", method: :delete %>
            </td>
          <% end %>
        </tr>
      </tbody>
    </table>
  </div>

  </div>
</div>